<?xml version="1.0" encoding="utf-8"?>
<!-- notif_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Notification 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/notif1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification 1"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Notification 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/notif2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification 2"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Notification 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/notif3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification 3"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Notification 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/notif4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification 4"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Notification 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/notif5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification 5"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
